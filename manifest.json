{
    "name" : "Pipe Screen Capture",
    "author": "Pipe",
    "version" : "1.0",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Pipe screen capture extension",
    "homepage_url": "https://www.addpipe.com/",
    "background": {
        "scripts": ["pipe_sc.js"],
        "persistent": false
    },
   "externally_connectable": {
	"matches": ["*://localhost/*", "https://*.addpipe.com/*", "https://hdfvr.com/*"]
     },
     "permissions": [
        "desktopCapture"
    ],
    "icons" : {
        "48" : "pipe-icon.png"
    },
    "web_accessible_resources": [
        "icon.png"
    ]
}